<?xml version='1.0' encoding='utf-8'?>
<widget id="com.redeeph.amcmb" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Booking App</name>
    <description>
        A basic Framework7 template for PhoneGap.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="20000" />
    <preference name="FadeSplashScreen" value="false" />
    <access origin="*" />
    <allow-navigation href="*://cordova.apache.org/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="mqqwpa://*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="SplashScreen" value="screen" />
        <preference name="StatusBarBackgroundColor" value="#2196f3" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="7.0" />
        <preference name="HideKeyboardFormAccessoryBar" value="true" />
        <preference name="KeyboardShrinksView" value="true" />
        <preference name="DisableScrollingWhenKeyboardShrinksView" value="true" />
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <preference name="Suppresses3DTouchGesture" value="true" />
        <preference name="StatusBarStyle" value="blacktranslucent" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    
<!-- Don't block any requests -->
<access origin="*" />
</widget>
